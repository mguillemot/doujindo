<div>
  <% form_for :address, @address do |f| -%>
      <div id="register_error"><%= error_messages_for 'address' %></div>

      <div class="register_field">
        <label for="address_full_address"><%= t('user.addresses.edit.full_address') -%></label>
        <%= f.text_area :full_address, :cols => 50, :rows => 4 %>
      </div>

      <div class="register_field">
        <label for="address_full_address"><%= t('user.addresses.edit.country') -%></label>
        <%= f.collection_select :country_id, Country.all.sort { |a,b| a.name <=> b.name }, :id, :name %>
      </div>

      <div class="register_field">
        <label for="address_full_address"><%= t('user.addresses.edit.notes') -%></label>
        <%= f.text_area :additional_infos, :cols => 50, :rows => 4 %>
      </div>

      <%= f.submit t('user.addresses.edit.submit_button') %>
  <% end -%>
</div>