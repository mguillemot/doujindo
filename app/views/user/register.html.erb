<% @title = "Registration" -%>
<h1><%= t('user.register') -%></h1>
<div id="register_content">
  <% form_for :user, @user, :url => { :action => 'register' } do |f| %>
    <div id="register_error"><%= error_messages_for 'user' %></div>

    <div class="register_field">
      <label for="user_login"><%= t('user.login') -%></label>
      <%= f.text_field :login %>
    </div>

    <div class="register_field">
      <label for="user_first_name"><%= t('user.first_name') -%></label>
      <%= f.text_field :first_name %>
    </div>

    <div class="register_field">
      <label for="user_last_name"><%= t('user.last_name') -%></label>
      <%= f.text_field :last_name %>
    </div>

    <div class="register_field">
      <label for="user_email"><%= t('user.email') -%></label>
      <%= f.text_field :email %>
    </div>

    <div class="register_field">
      <label for="user_password"><%= t('user.password') -%></label>
      <%= f.password_field :password %>
    </div>

    <div class="register_field">
      <label for="user_password_confirmation"><%= t('user.password_confirmation') -%></label>
      <%= f.password_field :password_confirmation %>
    </div>

    <%= submit_tag t('user.signup') %>

  <% end %>
</div>