<div id="signin" class="sidebar_group">
  <% form_tag({ :controller => 'user', :action => 'login' }, { :id => 'signin_form' }) do -%>
      <div class="signin_box_field">
        <label for="user_login" class="signin_box_label"><%= t('layout.sidebar.user_menu.username') -%></label>
        <%= text_field 'user', 'login', :size => 8, :class => 'signin_box_input' %>
      </div>
      <div class="signin_box_field">
        <label for="user_password" class="signin_box_label"><%= t('layout.sidebar.user_menu.password') -%></label>
        <%= password_field 'user', 'password', :size => 8, :class => 'signin_box_input' %>
      </div>
      <div id="signin_button">
        <%= submit_tag t('layout.sidebar.user_menu.login_button') %>
      </div>
  <% end -%>
  <div class="hr"></div>
  <div class="signin_box_additional_actions">
    <%= link_to 'New account', :controller => 'user', :action => 'register' %>
    |
    <%= link_to 'Forgot password?', :controller => 'user', :action => 'forgot_password' %>
  </div>
</div>
