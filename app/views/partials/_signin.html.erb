<div id="signin_section">
  <div class="signin_box">
    <% form_tag({ :controller => 'user', :action => 'login' }, { :id => 'signin_form' }) do -%>
      <div class="signin_box_field">
        <label for="user_login"><%= t('layout.sidebar.user_menu.username') -%></label>
        <%= text_field 'user', 'login', :size => 20, :class => 'signin_box_input' %>
      </div>
      <div class="signin_box_field">
        <label for="user_password"><%= t('layout.sidebar.user_menu.password') -%></label>
        <%= password_field 'user', 'password', :size => 20, :class => 'signin_box_input' %>
      </div>
      <div id="signin_button">
        <%= submit_tag t('layout.sidebar.user_menu.login_button') %>
      </div>
    <% end -%>
  </div>
</div>