<table border="1">
  <thead>
  <tr>
    <th><%= t('user.orders.detail.number') -%></th>
    <th><%= t('user.orders.detail.item') -%></th>
    <th><%= t('user.orders.detail.quantity') -%></th>
    <th><%= t('user.orders.detail.unit_price') -%></th>
    <th><%= t('user.orders.detail.total_price') -%></th>
  </tr>
  </thead>
  <tbody>
  <% order.order_items.each_with_index do |oi, i| -%>
      <tr id="item_<%= oi.item_id -%>">
        <td><%= i + 1 -%></td>
        <td><%= oi.item.title -%></td>
        <td>
          <div id="item_<%= oi.item_id -%>_quantity"><%= oi.quantity -%></div>
        </td>
        <td><%= order.currency.format_yen_value(oi.item.price) -%></td>
        <td>
          <div id="item_<%= oi.item_id -%>_total_price"><%= order.currency.format_value(order.currency.from_yen(oi.item.price) * oi.quantity) -%></div>
        </td>
      </tr>
  <% end -%>
  <tr>
    <td colspan="4"><%= t('user.orders.detail.grand_total') -%></td>
    <td>
      <div id="total_price"><%= order.currency.format_value(order.items_total_price) -%></div>
    </td>
  </tr>
  <tr>
    <td colspan="4">
      <% unless defined? country_chooser -%>
          <%= t('user.orders.detail.shipping_to.complete', :country => order.ship_to_country.name, :method => order.shipping_type) %>
      <% else -%>
          <%= t('user.orders.detail.shipping_to.incomplete') %>
          <%= collection_select :order, :ship_to_country_id, Country.available_for_shipping, :id, :name, { :include_blank => t('user.orders.detail.choose_a_country') } %>
          <%= observe_field :order_ship_to_country_id, :url => { :action => 'choose_country' }, :with => 'countryid' %>
          <div id="delivery_options">
            <%= render :partial => 'partials/delivery_options' -%>
          </div>
      <% end -%>
    </td>
    <td>
      <div id="shipping_price"><%= order.shipping_price ? order.currency.format_value(order.shipping_price) : t('user.orders.detail.na') -%></div>
    </td>
  </tr>
  <tr>
    <td colspan="4"><%= t('user.orders.detail.grand_total_with_shipping') -%></td>
    <td>
      <div id="total_price_with_shipping"><%= order.shipping_price ? order.currency.format_value(order.total_price) : t('user.orders.detail.na') -%></div>
    </td>
  </tr>
  </tbody>
</table>
<% unless defined? no_shipping_address -%>
    <div id="shipping_address">
      <div><strong><%= t('user.orders.detail.shipping_address.title') -%></strong></div>
      <div>
        <%= render :partial => 'partials/shipping_address', :object => order %>
      </div>
    </div>
<% end -%>