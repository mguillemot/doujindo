<div id="cart">
  <% if @cart and @cart.cart_items.size > 0 -%>
    <ol>
      <% @cart.cart_items.each do |cartItem| -%>
        <li><%= "#{cartItem.item.title} x#{cartItem.quantity}" -%></li>
      <% end -%>
    </ol>
    <%= button_to t('layout.sidebar.cart.chekout_button'), { :controller => 'cart' }, :method => :get %>
  <% else -%>
    <%= t('layout.sidebar.cart.empty') -%>
  <% end -%>
</div>