<div id="left_sidebar">
  <div class="menu_category">Shopping cart</div>
  <%= render :partial => 'partials/cart' %>

  <div class="menu_category">User menu</div>
  <% if !logged_in -%>
    <%= render :partial => 'partials/signin' %>
  <% else -%>
    <%= render :partial => 'partials/signout' %>
  <% end -%>

  <div class="menu_category">Global menu</div>
  <div>
    <%= link_to 'Register new account', :controller => 'user', :action => 'register' -%>
  </div>
  <div>
    Catalog
    <ul>
      <%= render :partial => 'partials/category_and_sub', :collection => Category.root_categories %>
    </ul>
  </div>
</div>
