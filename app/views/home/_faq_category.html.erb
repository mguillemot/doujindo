<h2 class="faq_category">
  <%= faq_category.toc_entry %>
</h2>
<% for item in faq_category.children -%>
    <a name="<%= item.id %>"></a>

    <table class="faq_item">
      <tbody>
      <tr>
        <td class="faq_avatar">
          <%= image_tag 'faq_aya.png', :width => 56, :height => 80, :alt => t('faq.question') %>
        </td>
        <td class="faq_question">
          <%= item.question %>
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <div class="hr"></div>
        </td>
      </tr>
      <% for part in item.parts do -%>
          <tr>
            <td class="faq_avatar">
              <%= image_tag "faq_#{part[:avatar]}.png", :height => 80, :alt => t('faq.answer') %>
            </td>
            <td class="faq_answer">
              <%= part[:answer] %>
            </td>
          </tr>
      <% end -%>
      </tbody>
    </table>
<% end -%>